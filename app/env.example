# Frontend Environment Variables
# Copy this file to .env.local for local development

# API Configuration
# For local development, use your local backend URL
NEXT_PUBLIC_API_URL=http://localhost:9000

# For production deployment, set this to your deployed backend URL
# NEXT_PUBLIC_API_URL=https://fetti-hackathon.onrender.com

# For different environments, use these examples:
# Local development: http://localhost:9000
# Production backend: https://your-backend-domain.com
# Vercel preview: https://your-backend-domain.com

# Optional: Enable debug mode
NEXT_PUBLIC_DEBUG=true
